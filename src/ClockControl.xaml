<UserControl x:Class="GlobalClockApp.ClockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="350">
    <UserControl.Resources>
        <!-- TIME -->
        <Style x:Key="DigitalTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource Font.Time}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TimeText}"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="320"/>
        </Style>

        <!-- LABELS (city/region) -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource Font.UI}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.LabelText}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.LabelBackground}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="160"/>
        </Style>

        <!-- UTC / DATE / DST (distinct row) -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource Font.UI}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.InfoText}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.InfoBackground}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="110"/>
        </Style>

        <!-- BUTTONS -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonForeground}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.ButtonBackground}"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <!-- APP BACKGROUND -->
    <Grid Background="{DynamicResource Brush.WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- TIME PANEL -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{DynamicResource Brush.TimeBackground}" Width="340" Margin="5">
            <TextBlock x:Name="TimeTextBlock" Style="{StaticResource DigitalTextStyle}"/>
        </Border>

        <!-- UTC / DATE / DST ROW -->
        <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource Brush.InfoBackground}" Width="110" Margin="2">
            <TextBlock x:Name="UTCTextBlock" Style="{StaticResource InfoTextStyle}" Width="110"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource Brush.InfoBackground}" Width="110" Margin="2">
            <TextBlock x:Name="DateTextBlock" Style="{StaticResource InfoTextStyle}" Width="110"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Background="{DynamicResource Brush.InfoBackground}" Width="110" Margin="2">
            <TextBlock x:Name="DSTTextBlock" Style="{StaticResource InfoTextStyle}" Width="110"/>
        </Border>

        <!-- LABELS PANEL -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="{DynamicResource Brush.LabelBackground}" Width="340" Margin="2">
            <StackPanel x:Name="LabelsPanel" Width="340" Margin="0">
                <!-- Labels will be added here dynamically -->
            </StackPanel>
        </Border>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Remove" Click="RemoveButton_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Move Up" Click="MoveUpButton_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Move Down" Click="MoveDownButton_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Edit" Click="EditButton_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
