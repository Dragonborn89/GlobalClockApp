<UserControl x:Class="SituationRoomClock.ClockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="350">
    <UserControl.Resources>
        <!-- TIME -->
        <Style x:Key="DigitalTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/DS-DIGI.TTF#DS-Digital"/>
            <Setter Property="Foreground" Value="#D4EDFF"/>
            <!-- brighter time text -->
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Background" Value="#1B2230"/>
            <!-- deep indigo -->
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="320"/>
        </Style>

        <!-- LABELS (city/region) -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#C6D4E2"/>
            <!-- light blue-gray -->
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="#212B36"/>
            <!-- dark blue-gray -->
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="160"/>
        </Style>

        <!-- UTC / DATE / DST (distinct row) -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#E4E8EF"/>
            <!-- light neutral -->
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#394355"/>
            <!-- slate (lighter than time, darker than labels) -->
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="110"/>
        </Style>

        <!-- BUTTONS -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#D8E8FF"/>
            <Setter Property="Background" Value="#4B5568"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <!-- APP BACKGROUND -->
    <Grid Background="#0F1216">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- TIME PANEL -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#1B2230" Width="340" Margin="5">
            <TextBlock x:Name="TimeTextBlock" Style="{StaticResource DigitalTextStyle}"/>
        </Border>

        <!-- UTC / DATE / DST ROW (uses InfoTextStyle so inner bg matches outer) -->
        <Border Grid.Row="1" Grid.Column="0" Background="#394355" Width="110" Margin="2">
            <TextBlock x:Name="UTCTextBlock" Style="{StaticResource InfoTextStyle}" Width="110"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Background="#394355" Width="110" Margin="2">
            <TextBlock x:Name="DateTextBlock" Style="{StaticResource InfoTextStyle}" Width="110"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Background="#394355" Width="110" Margin="2">
            <TextBlock x:Name="DSTTextBlock" Style="{StaticResource InfoTextStyle}" Width="110"/>
        </Border>

        <!-- LABELS PANEL -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="#212B36" Width="340" Margin="2">
            <StackPanel x:Name="LabelsPanel" Width="340" Margin="0">
                <!-- Labels will be added here dynamically -->
            </StackPanel>
        </Border>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Remove" Click="RemoveButton_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Move Up" Click="MoveUpButton_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Move Down" Click="MoveDownButton_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Edit" Click="EditButton_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
