<Window x:Class="GlobalClockApp.ThemeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme Editor" Height="540" Width="680"
        Background="{DynamicResource Brush.WindowBackground}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Live Theme Editor"
                   FontSize="20"
                   Margin="0,0,0,12"
                   Foreground="{DynamicResource Brush.InfoText}"/>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Colors -->
            <GroupBox Header="Colors (hex #AARRGGBB or #RRGGBB)"
                      Grid.Column="0"
                      Foreground="{DynamicResource Brush.InfoText}">
                <StackPanel Margin="12" Orientation="Vertical">
                    <!-- Window -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="WindowBackground"/>
                        <TextBox x:Name="TxtWindowBackground" Width="120" Text="#FF1A1A1A" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_WindowBackground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchWindowBackground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="MenuBackground"/>
                        <TextBox x:Name="TxtMenuBackground" Width="120" Text="#FF808080" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_MenuBackground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchMenuBackground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="MenuForeground"/>
                        <TextBox x:Name="TxtMenuForeground" Width="120" Text="#FF000000" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_MenuForeground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchMenuForeground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Separator/>

                    <!-- Time -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="TimeText"/>
                        <TextBox x:Name="TxtTimeText" Width="120" Text="#FFD4EDFF" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_TimeText" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchTimeText" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="TimeBackground"/>
                        <TextBox x:Name="TxtTimeBackground" Width="120" Text="#FF1B2230" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_TimeBackground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchTimeBackground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Separator/>

                    <!-- Label -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="LabelText"/>
                        <TextBox x:Name="TxtLabelText" Width="120" Text="#FFC6D4E2" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_LabelText" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchLabelText" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="LabelBackground"/>
                        <TextBox x:Name="TxtLabelBackground" Width="120" Text="#FF212B36" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_LabelBackground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchLabelBackground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Separator/>

                    <!-- Info -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="InfoText"/>
                        <TextBox x:Name="TxtInfoText" Width="120" Text="#FFE4E8EF" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_InfoText" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchInfoText" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="InfoBackground"/>
                        <TextBox x:Name="TxtInfoBackground" Width="120" Text="#FF394355" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_InfoBackground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchInfoBackground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Separator/>

                    <!-- Button -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="ButtonForeground"/>
                        <TextBox x:Name="TxtButtonForeground" Width="120" Text="#FFD8E8FF" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_ButtonForeground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchButtonForeground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="ButtonBackground"/>
                        <TextBox x:Name="TxtButtonBackground" Width="120" Text="#FF4B5568" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_ButtonBackground" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchButtonBackground" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Separator/>

                    <!-- Accent -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Width="140" VerticalAlignment="Center" Text="Accent"/>
                        <TextBox x:Name="TxtAccent" Width="120" Text="#FF5AA9FF" TextChanged="AnyColor_TextChanged"/>
                        <Button Content="..." Width="24" Click="PickColor_Accent" Margin="4,0,0,0"/>
                        <Rectangle Width="24" Height="24" x:Name="SwatchAccent" Stroke="Black" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

            </GroupBox>

            <!-- Fonts -->
            <GroupBox Header="Fonts"
                      Grid.Column="1"
                      Foreground="{DynamicResource Brush.InfoText}">
                <StackPanel Margin="12" Orientation="Vertical">
                    <TextBlock Text="Time Font"
                               Margin="0,0,0,8"
                               Foreground="{DynamicResource Brush.InfoText}"/>
                    <ComboBox x:Name="CmbTimeFont"
                              SelectionChanged="CmbTimeFont_SelectionChanged"
                              Width="280" />

                    <TextBlock Text="UI Font"
                               Margin="0,12,0,8"
                               Foreground="{DynamicResource Brush.InfoText}"/>
                    <ComboBox x:Name="CmbUiFont"
                              SelectionChanged="CmbUiFont_SelectionChanged"
                              Width="280" />

                    <Separator Margin="0,12,0,12"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Load Theme..."
                                Width="120"
                                Click="BtnLoadTheme_Click"/>
                        <Button Content="Save Theme..."
                                Width="120"
                                Click="BtnSaveTheme_Click"
                                Margin="8,0,0,0"/>
                    </StackPanel>

                    <TextBlock Text="Tip: For packaged fonts use the pack URI (e.g. pack://application:,,,/DS-DIGI.TTF#DS-Digital)."
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource Brush.InfoText}"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Width="100" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
